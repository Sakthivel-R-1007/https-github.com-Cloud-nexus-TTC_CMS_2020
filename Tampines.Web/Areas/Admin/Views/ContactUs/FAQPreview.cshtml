
@{
    ViewBag.Title = "FAQs  | Tampines Town Council";
    ViewBag.BodyClass = "CONTACTUS";
    var appPath = Convert.ToString(ApplicationInstance.Application["ApplicationPath"]);
    Layout = "~/Areas/Admin/Views/Shared/_FrontEndLayout.cshtml";
}
@model FAQ
@section meta{
    <meta property="og:url" content="@appPath/" />
    <meta property="og:title" content="FAQs | Tampines Town Council" />
    <meta property="og:description" content="" />
    @if (Model != null && Model.ContactUsBanner != null)
    {
        <meta property="og:image" content="@appPath/Resources/images/ContactUsBanner/@Model.ContactUsBanner.ImageGUID.@Model.ContactUsBanner.ImageExtension" />
    }
}
<div class="mainContents">
    <div class="contactUs">
        <!--Page Banner-->
        <div class="pageBanner">
            @if (Model != null && Model.ContactUsBanner != null)
            {
                <img src="@appPath/Resources/images/ContactUsBanner/@Model.ContactUsBanner.ImageGUID.@Model.ContactUsBanner.ImageExtension" alt="">
            }
        </div>
        <!--Breadcrumb-->
        <div class="breadcrumb">
            <div class="container">
                <a href="javascript:void(0)">Home</a><span></span><a href="javascript:void(0)">Contact Us</a><span></span>FAQs
            </div>
        </div>

        <!--Contact Us (FAQs)-->
        <div class="pageContents faqs">
            <h1>FAQs</h1>

            <div class="qna">

                @if (Model != null)
                {

                    <div class="question">@Model.Question</div>
                    <div class="answer">
                        @Html.Raw(Model.Content)
                    </div>

                }



            </div>
            <div class="padding20"></div><div class="padding20"></div>
        </div>

    </div><!--End Contact Us-->
</div><!-- End Main Contents -->
<div class="padding20"></div>
<script>
    $(document).ready(function () {
        //$(".answer.active").show();

        $(".question").click(function () {
            if ($(this).hasClass("active")) {
                $(this).removeClass("active");
                $(this).next(".answer").slideUp(200);
            } else {
                $(this).addClass("active");
                $(this).next(".answer").slideDown(200);
            }
        });
    });
</script>


